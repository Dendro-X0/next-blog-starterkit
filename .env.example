# ------------------------------------------------------------------
#  APP
# ------------------------------------------------------------------
# The URL of your app, required for authentication.
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# ------------------------------------------------------------------
#  DATABASE
# ------------------------------------------------------------------
# Replace with your actual PostgreSQL connection string.
DATABASE_URL="postgresql://user:password@host:port/db"
REDIS_URL="redis://localhost:6379"

# ------------------------------------------------------------------
#  AUTHENTICATION (Better Auth)
# ------------------------------------------------------------------
# A secret key for signing authentication tokens.
# You can generate a new one by running: openssl rand -hex 32
BETTER_AUTH_SECRET="your-super-secret-auth-secret-generated-with-openssl"

# ------------------------------------------------------------------
# OAUTH (Google & GitHub)
# ------------------------------------------------------------------
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
GITHUB_CLIENT_ID="your-github-client-id"
GITHUB_CLIENT_SECRET="your-github-client-secret"

# ------------------------------------------------------------------
#  EMAIL (Resend)
# ------------------------------------------------------------------
# Replace with your Resend API key.
RESEND_API_KEY="your-resend-api-key"
# Optional: Audience/Contact list ID if you use Resend Audiences
RESEND_AUDIENCE_ID="your-resend-audience-id"
# The "from" email address for sending emails.
EMAIL_FROM="noreply@example.com"

# SMTP settings (use with tools like MailHog on local dev)
# When MAIL_PROVIDER=SMTP, these are used to send emails.
SMTP_HOST="localhost"
SMTP_PORT="1025"
SMTP_SECURE="false" # true for 465, false for others
# Optional auth; leave blank for MailHog
SMTP_USER=""
SMTP_PASS=""

# ------------------------------------------------------------------
#  FILE STORAGE (S3-Compatible)
# ------------------------------------------------------------------
S3_REGION="your-s3-region"
S3_ACCESS_KEY_ID="your-s3-access-key-id"
S3_SECRET_ACCESS_KEY="your-s3-secret-access-key"
S3_BUCKET_NAME="your-s3-bucket-name"
# Public base URL for your S3 bucket if you serve files directly
S3_PUBLIC_URL="https://your-bucket-name.s3.your-region.amazonaws.com"
# The public-facing URL for your S3 bucket.
NEXT_PUBLIC_S3_PUBLIC_URL="https://your-bucket-name.s3.your-region.amazonaws.com"
# Optional: Use a custom endpoint for S3-compatible services like MinIO.
# S3_ENDPOINT="http://localhost:9000"

